{
    "name": "Chrome HN",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "A Chrome extension for HN discussions",
    "background": { "scripts": ["background.js"] },
    "browser_action": {
        "default_icon": "icon-19-off.png",
        "default_title": "Click to see HN discussion",
        "default_popup": "popup.html"
    },
    "permissions": [
      "tabs",
      "http://*/*",
      "https://*/*"
    ],
    "icons": {
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
}